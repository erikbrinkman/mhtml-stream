{
  "name": "mhtml-stream",
  "version": "0.0.1",
  "description": "Zero dependency stream MHTML parser",
  "keywords": [
    "mhtml",
    "stream"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/erikbrinkman/mhtml-stream.git"
  },
  "author": "Erik Brinkman <erik.brinkman@gmail.com>",
  "license": "MIT",
  "types": "dist/index.d.ts",
  "module": "bundle/mhtml.esm.min.js",
  "main": "bundle/mhtml.cjs.min.js",
  "unpkg": "bundle/mhtml.iife.min.js",
  "files": [
    "/bundle/*.js",
    "/dist/**/*.js",
    "/dist/**/*.d.ts"
  ],
  "type": "module",
  "scripts": {
    "fmt": "prettier --write 'src/*.ts' '*.json' bundle.mjs",
    "lint": "tsc && eslint --cache 'src/*.ts' && typedoc --emit none",
    "test": "jest --coverage",
    "doc": "typedoc",
    "build": "tsc -p tsconfig.build.json && node bundle.mjs",
    "prepack": "yarn lint && yarn test && yarn build"
  },
  "dependencies": {
    "base64-js": "^1.5.1"
  },
  "devDependencies": {
    "@babel/core": "^7.17.10",
    "@babel/preset-env": "^7.17.10",
    "@babel/preset-typescript": "^7.16.7",
    "@types/base64-js": "^1.3.0",
    "@types/jest": "^27.5.1",
    "@types/node": "^17.0.33",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "@yarnpkg/esbuild-plugin-pnp": "^2.0.2",
    "babel-jest": "^28.1.0",
    "chalk": "4.1.2",
    "esbuild": "^0.14.39",
    "eslint": "^8.15.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^26.1.5",
    "eslint-plugin-spellcheck": "^0.0.19",
    "eslint-plugin-tsdoc": "^0.2.16",
    "jest": "^28.1.0",
    "prettier": "^2.6.2",
    "prettier-plugin-organize-imports": "^2.3.4",
    "typedoc": "^0.22.15",
    "typescript": "^4.6.4"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-organize-imports"
    ]
  },
  "jest": {
    "testEnvironment": "node"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ],
      "@babel/preset-typescript"
    ]
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "jest",
      "spellcheck",
      "eslint-plugin-tsdoc"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:jest/recommended",
      "prettier"
    ],
    "env": {
      "node": true
    },
    "rules": {
      "@typescript-eslint/no-inferrable-types": "off",
      "@typescript-eslint/no-non-null-assertion": "off",
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "varsIgnorePattern": "^_+$"
        }
      ],
      "prefer-const": [
        "error",
        {
          "destructuring": "all"
        }
      ],
      "no-warning-comments": [
        "error",
        {
          "terms": [
            "fixme"
          ],
          "location": "anywhere"
        }
      ],
      "spellcheck/spell-checker": [
        "error",
        {
          "identifiers": false,
          "skipIfMatch": [
            "[^\\s]{20,}"
          ],
          "skipWords": [
            "0x7fffffff",
            "Chr",
            "Dvalue",
            "Hola",
            "Mhtml",
            "Todayâ€™s",
            "Uint",
            "Yorker",
            "ascii",
            "delim",
            "multipart",
            "versa"
          ]
        }
      ]
    }
  },
  "packageManager": "yarn@3.2.0"
}
