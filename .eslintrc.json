{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint", "jest", "spellcheck"],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:jest/recommended",
    "prettier"
  ],
  "env": {
    "node": true
  },
  "rules": {
    "@typescript-eslint/no-inferrable-types": "off",
    "@typescript-eslint/no-non-null-assertion": "off",
    "@typescript-eslint/no-unused-vars": [
      "error",
      { "varsIgnorePattern": "^_+$" }
    ],
    "prefer-const": [
      "error",
      {
        "destructuring": "all"
      }
    ],
    "no-warning-comments": [
      "error",
      { "terms": ["fixme"], "location": "anywhere" }
    ],
    "spellcheck/spell-checker": [
      "error",
      {
        "identifiers": false,
        "skipIfMatch": ["[^\\s]{20,}"],
        "skipWords": [
          "0x7fffffff",
          "Chr",
          "Dvalue",
          "Hola",
          "Mhtml",
          "Todayâ€™s",
          "Uint",
          "Yorker",
          "ascii",
          "delim",
          "multipart",
          "versa"
        ]
      }
    ]
  }
}
